<div class="container">
  <div class="d-flex justify-content-between mt-3">
    <div class="d-flex">
      <% checkMark = @task.completed ? '✔' : '❌' %>
      <%= form_for @task do |f| %>
        <%= f.hidden_field :completed, class: "form-control mt-2", value:!@task.completed %>
        <%= f.submit checkMark, class: "display-1 mb-0 borderless" %>
      <% end %>
      <p class="display-1 mb-0"><%= @task.title %></p>
    </div>
    <div class="d-flex flex-column align-items-center justify-content-between">
    <%= link_to "Edit this task" , edit_task_path(@task), class: "btn btn-primary w-100 mt-1" %>
    <%= link_to "Delete this task" , task_path(@task) , method: :delete, data: { confirm: "Confirm delete #{@task.title}?" }, class: "btn btn-danger w-100 mb-1" %>
    </div>
  </div>
  <h2 class=""><%= @task.details %></h2>
  <%= link_to "Back to list", tasks_path %>
</div>
